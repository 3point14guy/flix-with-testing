<header class="primary">
  <h1>NixFlix Movie Database</h1>
  <nav>
    <% if current_user %>
      <%= link_to current_user.name, current_user %> |
      <%= link_to "Account Settings", edit_user_path(current_user)%>
    <% else %>
      <p>
        <%= link_to "Sign Up", signup_path %> |
        <%= link_to "Sign In", signin_path %>
      </p>
    <% end %>
  </nav>
</header>
