<article>
  <header>
    <%= image_default(@movie, 150)%>
    <h2><%= @movie.title %></h2>
  </header>
  <p>
    <%= @movie.description %>
  </p>
  <table>
    <tr>
      <th>Released:</th>
      <td><%= @movie.released_on %></td>
    </tr>
    <tr>
      <th>Rating:</th>
      <td><%= @movie.rating %></td>
    </tr>
    <tr>
      <th>Total Gross:</th>
      <td><%= format_total_gross(@movie) %></td>
    </tr>
    <tr>
      <th>Cast:</th>
      <td><%= @movie.cast %></td>
    </tr>
    <tr>
      <th>Director:</th>
      <td><%= @movie.director %></td>
    </tr>
    <tr>
      <th>Duration:</th>
      <td><%= @movie.duration %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= link_to "See Reviews", movie_reviews_path(@movie)%></td>
    </tr>
  </table>

  <br><br>
  <%#= link_to "Write a Review", new_movie_review_path(@movie) %>
  <%= render 'reviews/form' %>
</article>
<br>
<%= link_to "Edit", edit_movie_path(@movie) %> |
<%= link_to "Delete", movie_path(@movie), method: :delete, data: {confirm: "Are you sure?"} %>
<br>
