<header>
  <h1>
    Sign In
  </h1>
</header>
<p>
  Don't have an account? <%= link_to "Sign Up", signup_path %>
</p>
<%= form_tag(session_path) do %>
<fieldset>
  <p>
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, autofocus: true %>
  </p>
  <h5>OR</h5>
  <p>
    <%= label_tag :username %>
    <%= text_field_tag :username, nil %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, required: true %>
  </p>
  <p>
    <%= submit_tag "Sign In" %>
  </p>
</fieldset>
<% end %>
