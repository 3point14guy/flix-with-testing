<h1>Create a review for <%= link_to(@movie.title, @movie) %></h1>

<%= render 'shared/errors', object: @review %>
<%= form_for([@movie, @review]) do |f| %>
  <fieldset>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name, size: 40, autofocus: true %>
    </p>
    <p>
      <%= f.label :comment %>
      <%= f.text_area :comment, placeholder: "We're all ears..." %>
    </p>
    <p>
      <%= f.label :stars %>
      <%= f.select :stars, Review::STARS, prompt: "Pick one"  %>
    </p>
    <p>
      <%= f.submit "Post Review" %> |
      <%= link_to "cancel", movie_path(@movie) %>
    </p>
  </fieldset>
<% end %>
