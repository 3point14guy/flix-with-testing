<% if object.errors.any? %>
  <section>
    <h2>
      The <%= object.class.name.titleize.downcase %> could not be saved.
    </h2>
    <h3>
      Please correct the
      <%= pluralize(object.errors.count, 'error') %>:
    </h3>
    <ul>
      <% object.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </section>
<% end %>
